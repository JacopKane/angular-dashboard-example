{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules" : {
    "angular/controller-as" : 1,
    "operator-linebreak" : 0,
    "no-return-assign" : 0,
    "padded-blocks" : 0,
    "key-spacing" : 0,
    "one-var" : 0,
    "semi" : 0
  },
  "extends": ["angular", "eslint:recommended", "standard"]
}
